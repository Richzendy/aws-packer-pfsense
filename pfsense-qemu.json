{
  "builders": [
    {
      "http_directory": "config",
      "http_port_min": "8100",
      "boot_wait": "45s",
      "boot_command": [
	"<wait10><enter>",
	"<wait10><enter>",
	"<wait10><enter>",
	"<wait10><down>",
	"<wait10><enter>",
	"<wait10><left>",
	"<wait10><enter>",
	"<wait10><enter>",
	"<wait10><down>",
	"<wait10><enter>",
	"<wait10><enter>",
	"<wait10><enter>",
	"<wait10><wait10><wait10><wait10><enter>",
	"<wait10><enter>",
	"<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait20>",
	"8<wait10><enter>",
	"curl http://{{ .HTTPIP }}:{{ .HTTPPort }}/config.xml >/conf/config.xml<wait10><enter>",
	"reboot<wait10><enter>"
      ],
      "type": "qemu",
      "iso_url": "input/pfSense-CE-2.6.0-RELEASE-amd64.iso",
      "iso_checksum": "sha256:f6520bb14a5e690c6533e4e8fbf4a48d2967f3bc35a713e716b9c64317a13f23",
      "shutdown_command": "shutdown -p now",
      "disk_size": "8192",
      "format": "raw",
      "vm_name": "pfSense-CE-2.6.0_{{ isotime \"20060102_030405\"}}.raw",
      "ssh_username": "root",
      "ssh_password": "pfsense",
      "ssh_wait_timeout": "120s",
      "output_directory": "output-qemu",
      "headless": "true",
      "net_device": "e1000",
      "vnc_bind_address": "127.0.0.1",
      "vnc_port_min": "5900",
      "vnc_port_max": "5900",
      "qemuargs": [
	["-m", "1024M"],
	["-smp", "1"],
	["-netdev", "user,id=user.0,hostfwd=tcp::{{ .SSHHostPort }}-:6736,hostfwd=tcp::7373-:7373"],
	["-device", "e1000,netdev=user.0"],
	["-netdev", "user,id=user.1"],
	["-device", "e1000,netdev=user.1"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "config/provision.sh"
    }
  ],
  "post-processors": [
    {
	"type": "shell-local",
	 "inline": ["IMAGE=\"$(ls -1tr output-qemu/*.raw | tail -n 1)\"; qemu-img convert -f raw -O vmdk -o subformat=streamOptimized ${IMAGE} output-qemu/$(basename ${IMAGE} .raw).vmdk"]
    }
  ]
}
